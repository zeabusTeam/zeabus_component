<?xml version="1.0"?>

<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="flag">

    <material name="red">
        <color rgba="${255/255} ${0/255} ${0/255} 0.81"/>
    </material>

    <material name="purple">
        <color rgba="${171/255} ${80/255} ${231/255} 1"/>
    </material>

    <link name="flag_target">

        <visual>
            
            <geometry>
                <cylinder length="0.65" radius="0.05"/>
            </geometry>

            <origin rpy="0 0 0" xyz="0 0 0.325"/>

            <material name="purple"/>

        </visual>

    </link>

    <link name="flage_target_header">

        <visual>

            <geometry>
                <box size="0.4 0.1 0.08"/>
            </geometry>

            <origin rpy="0 0 0" xyz="0.2 0 0.04"/>

        </visual>

    </link>

    <joint name="flag_connect" type="fixed">
        <parent link="flag_target"/>
        <child link="flage_target_header"/>
        <origin xyz="-0.05 0 0.65"/>
    </joint>

</robot>
